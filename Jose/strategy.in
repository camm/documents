##############################################
####          STRATEGY.in                 ####
##############################################

strategy,
	single_method
	  method_pointer = 'PotRefine'

method,
	id_method = 'PotRefine'
	model_pointer = 'PotRefine_M'
	sampling
	  samples = 20 seed = 12345

model,
	id_model = 'PotRefine_M'
	nested
	  variables_pointer  = 'PotRefine_V'
	  sub_method_pointer = 'IntelScript'
	  responses_pointer  = 'PotRefine_R'

variables,
	id_variables = 'PotRefine_V'
	continuous_design = 1
	initial_point 0.4137
	upper_bounds 0.6
	lower_bounds 0.3
	descriptors 'Hq' #Hydrogen charge

responses,
	objective_functions = 1
	numerical_gradients
	no_hessians

method,
	id_method = 'IntelScript'
	model_pointer = 'IntelScript_M'
	local_reliability
	  mpp_search no_approx
	  num_response_levels = 0 1 1
	  response_levels = 0.0 0.0
	  compute reliabilities
	  complementary distribution

model,
	id_model = 'IntelScript_M'
	single
	  variables_pointer = 'IntelScript_V'
	  interface_pointer = 'IntelScript_I'
	  responses_pointer = 'IntelScript_R'

variables,
	id_variables = 'IntelScript_V'
	continuous_design = 3 #Elastic_line, background, scaling
	initial_point    1.0 1.0 1.0

interface,
	id_interface = 'IntelScript_I'
	fork
	   input_filter = ’adaptToIntelScript’
	   parameters_file = ’IntelScript.in’
	   analysis_driver = ’IntelScript.py’
	   results_file = ’IntelScript.out’
	   output_filter = ’adaptToPotRefine’
	   file_tag

responses,
	id_responses = 'IntelScript_R'
	objective_functions = 1
	numerical_gradients
	no_hessians

